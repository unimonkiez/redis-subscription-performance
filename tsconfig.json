{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/src",
    "lib": ["ESNext"],
    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "moduleDetection": "force",
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
